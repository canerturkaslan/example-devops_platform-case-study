pipeline {

  options {
    ansiColor('xterm')
  }

  agent {
    kubernetes {
      yamlFile './app/builder.yaml'
    }
  }
  
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    
    stage('Build and Push') {
    when { expression { return params.runBuild } }
    steps {
      container(name: 'kaniko') {
        // Kaniko ile Docker imajını build ve push işlemi
        script {
          sh '''

          /kaniko/executor --dockerfile `pwd`/app/Dockerfile \
                           --context `pwd`/app \
                           --destination=canerturkaslan/flask-app:0.${BUILD_NUMBER}
          '''
        }
      }
    }
  }    
 

    stage('Deploy App to Kubernetes') {     
      steps {
        container('kubectl') {
          withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG')]) {
            sh 'ls -ltrah && pwd'
            sh 'sed -i "s/<IMAGE_TAG>/${BUILD_NUMBER}/" ./manifests/deployment.yaml'
            sh 'kubectl apply -f ./manifests/deployment.yaml'
            sh 'kubectl apply -f ./manifests/service.yaml'
            sh 'kubectl apply -f ./manifests/hpa.yaml'
            sh 'kubectl apply -f ./manifests/ingress.yaml'

          }
        }
      }
    }
    

  }
}

